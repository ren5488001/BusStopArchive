<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.BamsProjectMapper">

    <resultMap type="BamsProject" id="BamsProjectResult">
        <result property="projectId"    column="project_id"    />
        <result property="projectCode"    column="project_code"    />
        <result property="projectName"    column="project_name"    />
        <result property="projectManager"    column="project_manager"    />
        <result property="latitude"    column="latitude"    />
        <result property="longitude"    column="longitude"    />
        <result property="templateId"    column="template_id"    />
        <result property="templateName"    column="template_name"    />
        <result property="completenessRate"    column="completeness_rate"    />
        <result property="totalRequiredFiles"    column="total_required_files"    />
        <result property="actualArchivedFiles"    column="actual_archived_files"    />
        <result property="projectDesc"    column="project_desc"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectProjectVo">
        select project_id, project_code, project_name, project_manager, latitude, longitude,
               template_id, template_name, completeness_rate, total_required_files, actual_archived_files,
               project_desc, del_flag, create_by, create_time, update_by, update_time, remark
        from bams_project
    </sql>

    <select id="selectProjectList" parameterType="BamsProject" resultMap="BamsProjectResult">
        <include refid="selectProjectVo"/>
        <where>
            del_flag = '0'
            <if test="projectCode != null  and projectCode != ''"> and project_code like concat('%', #{projectCode}, '%')</if>
            <if test="projectName != null  and projectName != ''"> and project_name like concat('%', #{projectName}, '%')</if>
            <if test="projectManager != null  and projectManager != ''"> and project_manager like concat('%', #{projectManager}, '%')</if>
            <if test="templateId != null "> and template_id = #{templateId}</if>
            <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
                and date_format(create_time,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
            </if>
            <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
                and date_format(create_time,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
            </if>
        </where>
        order by create_time desc
    </select>

    <select id="selectProjectById" parameterType="Long" resultMap="BamsProjectResult">
        <include refid="selectProjectVo"/>
        where project_id = #{projectId}
    </select>

    <select id="selectProjectByCode" parameterType="String" resultMap="BamsProjectResult">
        <include refid="selectProjectVo"/>
        where project_code = #{projectCode}
    </select>

    <select id="checkProjectCodeUnique" parameterType="String" resultMap="BamsProjectResult">
        <include refid="selectProjectVo"/>
        where project_code = #{projectCode} limit 1
    </select>

    <select id="selectMaxCode" resultType="String">
        select project_code
        from bams_project
        where project_code like 'XMB%'
        order by project_code desc
        limit 1
    </select>

    <insert id="insertProject" parameterType="BamsProject" useGeneratedKeys="true" keyProperty="projectId">
        insert into bams_project
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="projectCode != null and projectCode != ''">project_code,</if>
            <if test="projectName != null and projectName != ''">project_name,</if>
            <if test="projectManager != null">project_manager,</if>
            <if test="latitude != null">latitude,</if>
            <if test="longitude != null">longitude,</if>
            <if test="templateId != null">template_id,</if>
            <if test="templateName != null">template_name,</if>
            <if test="completenessRate != null">completeness_rate,</if>
            <if test="totalRequiredFiles != null">total_required_files,</if>
            <if test="actualArchivedFiles != null">actual_archived_files,</if>
            <if test="projectDesc != null">project_desc,</if>
            <if test="delFlag != null and delFlag != ''">del_flag,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="remark != null">remark,</if>
            create_time
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="projectCode != null and projectCode != ''">#{projectCode},</if>
            <if test="projectName != null and projectName != ''">#{projectName},</if>
            <if test="projectManager != null">#{projectManager},</if>
            <if test="latitude != null">#{latitude},</if>
            <if test="longitude != null">#{longitude},</if>
            <if test="templateId != null">#{templateId},</if>
            <if test="templateName != null">#{templateName},</if>
            <if test="completenessRate != null">#{completenessRate},</if>
            <if test="totalRequiredFiles != null">#{totalRequiredFiles},</if>
            <if test="actualArchivedFiles != null">#{actualArchivedFiles},</if>
            <if test="projectDesc != null">#{projectDesc},</if>
            <if test="delFlag != null and delFlag != ''">#{delFlag},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="remark != null">#{remark},</if>
            sysdate()
        </trim>
    </insert>

    <update id="updateProject" parameterType="BamsProject">
        update bams_project
        <trim prefix="SET" suffixOverrides=",">
            <if test="projectName != null and projectName != ''">project_name = #{projectName},</if>
            <if test="projectManager != null">project_manager = #{projectManager},</if>
            <if test="latitude != null">latitude = #{latitude},</if>
            <if test="longitude != null">longitude = #{longitude},</if>
            <if test="templateId != null">template_id = #{templateId},</if>
            <if test="templateName != null">template_name = #{templateName},</if>
            <if test="completenessRate != null">completeness_rate = #{completenessRate},</if>
            <if test="totalRequiredFiles != null">total_required_files = #{totalRequiredFiles},</if>
            <if test="actualArchivedFiles != null">actual_archived_files = #{actualArchivedFiles},</if>
            <if test="projectDesc != null">project_desc = #{projectDesc},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            <if test="remark != null">remark = #{remark},</if>
            update_time = sysdate()
        </trim>
        where project_id = #{projectId}
    </update>

    <update id="deleteProjectByIds" parameterType="Long">
        update bams_project set del_flag = '2' where project_id in
        <foreach item="projectId" collection="array" open="(" separator="," close=")">
            #{projectId}
        </foreach>
    </update>

    <!-- 驾驶舱统计查询 -->
    <select id="countTotalProjects" resultType="Integer">
        select count(*) from bams_project where del_flag = '0'
    </select>

    <select id="countOngoingProjects" resultType="Integer">
        select count(*) from bams_project
        where del_flag = '0' and completeness_rate &lt; 100
    </select>

    <select id="getAvgCompleteness" resultType="Integer">
        select IFNULL(ROUND(AVG(completeness_rate)), 0) from bams_project where del_flag = '0'
    </select>

    <select id="getCompletenessDistribution" resultType="java.util.Map">
        select
            ranges.range_name as name,
            IFNULL(stats.project_count, 0) as count,
            ranges.color
        from (
            select '0-30% (预警)' as range_name, 1 as sort_order, '#ff4d4f' as color
            union all
            select '30-70% (进行中)' as range_name, 2 as sort_order, '#faad14' as color
            union all
            select '70-100% (接近完成)' as range_name, 3 as sort_order, '#52c41a' as color
        ) ranges
        left join (
            select
                case
                    when completeness_rate &lt; 30 then '0-30% (预警)'
                    when completeness_rate &lt; 70 then '30-70% (进行中)'
                    else '70-100% (接近完成)'
                end as range_name,
                count(*) as project_count
            from bams_project
            where del_flag = '0'
            group by range_name
        ) stats on ranges.range_name = stats.range_name
        order by ranges.sort_order
    </select>

</mapper>
